<h2>Creacion usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <%# <div class="field"> %>
    <%#= f.label :article %>
    <%# <br /> %>
    <%#= f.text_field :article, autocomplete: "article" %>
  <%# </div> %>

<div class="form-group">
    <%= f.label :Foto_perfil %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


      <div class="field py-3">
        <% f.fields_for :images do |image_form| %>
          <div class="form-group">
            <%= image_form.label :url, "Agrega tu imagen de perfil", class: 'form-label' %>
            <%= image_form.text_field :url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= image_form.label :context, "Describe donde estabas", class: 'form-label' %>
            <%= image_form.text_field :context, class: 'form-control' %>
          </div>
        <% end %>
      </div> 

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>